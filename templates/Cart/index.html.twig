{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>
    {% if items | length >0%}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Conditionnement</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{item.product.name}}</td>
                        <td>{{item.product.price}}</td>
                        <td>{{item.quantity}}</td>
                        <td>{{item.conditionnement}}Kg</td>
                        <td>{{item.product.price * item.quantity * item.conditionnement}}</td>
                        <td>
                            <a href="{{ path("cart_remove", {'id': item.product.id})}}" class="btn btn-danger btn-sm">
                                Delete
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                 <td colspan='3' class='text-right'> Total : </td>
                 <td>{{ total }}</td>
                 <td></td>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <p>Surprise, c'est vide !</p>
    {% endif %}
    
{% endblock %}